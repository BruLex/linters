{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommitTypeAll(chore)"],
  "rangeStrategy": "bump",
  "groupName": "schematics-deps",
  "automerge": true,
  "automergeType": "pr",
  "ignoreTests": true,
  "automergeComment": "update schematics deps",
  "packageRules": [
    {
      "matchPaths": ["src/utility/packages/package.json"],
      "groupName": "linters-deps",
      "automergeComment": "update linters deps",
      "extends": ["config:base", ":semanticCommitTypeAll(feat)"],
      "rangeStrategy": "bump"
    }
  ]
}
